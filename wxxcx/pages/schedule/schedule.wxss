/* Pages container */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f7f7;
  box-sizing: border-box;
}

/* Top Bar */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.week-selector {
  display: flex;
  flex-direction: column;
}

.picker-inner {
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.picker-arrow {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #333;
  margin-left: 10rpx;
}

.semester-info {
  font-size: 24rpx;
  color: #888;
  margin-top: 5rpx;
}

.refresh-btn {
  font-size: 28rpx;
  color: #4f46e5;
  padding: 10rpx 20rpx;
  background: #eef2ff;
  border-radius: 30rpx;
}

/* Week Header */
.week-header {
  display: flex;
  background-color: #f7f7f7;
  padding-bottom: 10rpx;
  z-index: 90;
}

.header-cell {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 0; /* Reduced padding slightly */
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.date-text {
  font-size: 20rpx;
  color: #999;
  margin-top: 2rpx;
}

.month-col {
  flex: 0 0 60rpx; /* Width must match sidebar */
  background-color: #f7f7f7;
  font-weight: bold;
  color: #4f46e5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.today {
  background-color: #eef2ff;
  color: #4f46e5;
  border-radius: 8rpx;
}

.day-name {
  display: block;
}

/* Scrollable Area */
.timetable-swiper {
  flex: 1;
  background-color: #fff;
}

.timetable-scroll {
  height: 100%;
}

.timetable-body {
  display: flex;
  flex-direction: row;
  min-height: 100%;
}

/* Sidebar */
.sidebar {
  flex: 0 0 60rpx; /* Fixed width */
  background-color: #fafafa;
  border-right: 1rpx solid #eee;
}

.sidebar-cell {
  height: 110rpx; /* Must match grid row height */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

/* Course Grid */
.course-grid {
  position: relative;
  flex: 1;
}

/* Horizontal Grid Lines */
.grid-row-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 110rpx;
  border-bottom: 1rpx dashed #eee;
  box-sizing: border-box;
  pointer-events: none; /* Let clicks pass through */
}

/* Course Cards */
.course-card-container {
  position: absolute;
  width: 14.28%; /* 100% / 7 */
  padding: 2rpx; /* Gap between cards */
  box-sizing: border-box;
  z-index: 10;
}

.course-card {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  padding: 8rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: opacity 0.2s;
}

.course-card:active {
  opacity: 0.8;
}

.course-name {
  font-size: 22rpx;
  color: #333; /* Changed to Black/Dark Grey */
  line-height: 1.3;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /* Limit visible lines */
  text-overflow: ellipsis; 
  overflow: hidden;
  text-shadow: none;
}

.course-room {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #555; /* Changed to Dark Grey */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Empty State */
.empty-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ccc;
  font-size: 28rpx;
  text-align: center;
}
